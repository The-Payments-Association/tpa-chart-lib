"scripts": {
  "dev": "react-scripts start",
    "build": "react-scripts build && yarn build:all && cp dist/*.js build/",
  "test": "react-scripts test",
  "eject": "react-scripts eject",
  "build:all": "node build-scripts/build-all.js",
  "build:bar": "rollup -c rollup.config.bar.mjs",
  "build:line": "rollup -c rollup.config.line.mjs", 
  "build:pie": "rollup -c rollup.config.pie.mjs",
  "clean": "rimraf dist",
  "deploy:netlify": "npm run clean && npm run build:all && echo 'Built files ready for Netlify deployment in dist/ folder'",
    "serve": "python3 -m http.server 8080",
    "test:local": "yarn build:bar && python3 -m http.server 8080"
  
},
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
